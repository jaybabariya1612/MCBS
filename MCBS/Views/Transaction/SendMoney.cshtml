@model MCBS.Models.TransactionModel

@{
    ViewData["Title"] = "Send Money";
}
<link href="~/css/SendMoney.css" rel="stylesheet" />
<div class="transaction-container">
    <div class="transaction-header">
        <i class="fas fa-money-bill-wave"></i>
        <h2>Send Money</h2>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="SendMoney" method="post">
        <div class="form-group">
            <label asp-for="ReceiverIdentifier">Recipient Account/Email</label>
            <input asp-for="ReceiverIdentifier" class="form-control" placeholder="Enter account number or MobileNumber" />
            <span asp-validation-for="ReceiverIdentifier" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Amount">Amount</label>
            <div class="input-group">
                <span class="input-group-text">₹</span>
                <input asp-for="Amount" class="form-control" placeholder="0.00" />
            </div>
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DobPin">Date of Birth (for verification)</label>
            <input asp-for="DobPin" class="form-control" type="date" />
            <span asp-validation-for="DobPin" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-4">
            <i class="fas fa-paper-plane me-2"></i> Transfer Funds
        </button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}