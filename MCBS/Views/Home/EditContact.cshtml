<link href="~/css/ContactEdit.css" rel="stylesheet" />
@model ContactUsModel
<div class="edit-contact-container">
    <div class="edit-contact-header">
        <h2>Edit Contact Message</h2>
        <p>Update the contact details below</p>
    </div>

    <form method="post" class="edit-contact-form">
        <input type="hidden" asp-for="ContactId" />

        <div class="form-grid">
            <div class="form-group">
                <label asp-for="FullName" class="form-label">
                    <i class="fas fa-user"></i> Full Name
                </label>
                <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="form-label">
                    <i class="fas fa-envelope"></i> Email
                </label>
                <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MobileNumber" class="form-label">
                    <i class="fas fa-phone"></i> Mobile Number
                </label>
                <input asp-for="MobileNumber" class="form-control" placeholder="Enter mobile number" />
                <span asp-validation-for="MobileNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Subject" class="form-label">
                    <i class="fas fa-tag"></i> Subject
                </label>
                <input asp-for="Subject" class="form-control" placeholder="Enter subject" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Message" class="form-label">
                <i class="fas fa-comment"></i> Message
            </label>
            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Enter your message"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-update">
                <i class="fas fa-save"></i> Update Message
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}