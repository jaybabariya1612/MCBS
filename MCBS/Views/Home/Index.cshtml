@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/index.css" rel="stylesheet" />


<!-- Hero Section -->
<div class="hero-section text-white py-5 position-relative overflow-hidden" style="background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));">

    <div class="container position-relative z-2">
        <div class="row align-items-center">
            <div class="col-lg-6 fade-in">
                <h1 class="display-4 fw-bold mb-4">Welcome to <span class="text-accent">MCBS</span> Bank</h1>
                <p class="lead mb-4">Your trusted partner in digital banking - Secure, Fast, and Reliable banking solutions for everyone.</p>
                <div class="d-flex gap-3 flex-wrap">
                    @if (Context.Session.GetString("UserName") == null)
                    {
                        <a href="@Url.Action("Login", "Login")" class="btn btn-light btn-lg px-4 py-3 fw-bold shadow-sm">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                    }

                    <a href="#features" class="btn btn-accent btn-lg px-4 py-3 fw-bold shadow-sm">
                        <i class="fas fa-search me-2"></i>Explore Features
                    </a>
                </div>
                <div class="mt-4 d-flex align-items-center">
                    <small class="text-light">256-bit SSL Encryption | RBI Compliant</small>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block slide-up">
                <div class="position-relative">
                    <img src="~/images/hero-banking.png" alt="Digital Banking" class="img-fluid rounded-3 shadow-lg">
                    <div class="position-absolute top-0 start-0 w-100 h-100 banking-app-overlay"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="py-5 bg-white">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-3">
